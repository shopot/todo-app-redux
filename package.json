{
  "name": "todo-app-redux",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Learning Redux: Zero to Mastery",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
